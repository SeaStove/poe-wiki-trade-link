{
    "manifest_version": 3,
    "name": "PoE Wiki Search Link",
    "description": "Adds a link to every PoEWiki page to the trade site for that item.",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/icon-48.png"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": ["tabs", "activeTab", "scripting"],
    "background": {
        "service_worker": "scripts/service_worker/background.js"
    },
    "content_scripts": [
        {
            "js": ["scripts/content/wiki.js"],
            "matches": ["https://www.poewiki.net/*"]
        },
        {
            "js": ["scripts/content/trade.js"],
            "matches": ["https://www.pathofexile.com/trade/*"]
        }
    ]
}
